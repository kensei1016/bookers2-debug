<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>Follow Users</h2>
			<!-- フォローユーザー一覧 -->
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @follow_users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= user.name%></td>
						<td><%= "フォロー数：#{user.relationship_users.count}" %></td>
						<td><%= "フォロワー数：#{user.relationship_follow_users.count}" %></td>
						<td>
							<% if user.id != current_user.id %>
								<% if current_user.relationship_users.any?{ |relationship_user| relationship_user.follow_user_id == user.id } %>
									<%= link_to 'フォロー外す', user_relationship_path(user), method: :delete %>
								<% else %>
									<%= link_to 'フォローする', user_relationship_path(user), method: :post %>
								<% end %>
							<% end %>
						</td>
						<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<!--フォローユーザー一覧/ -->
		</div>
	</div>
</div>
