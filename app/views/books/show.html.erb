<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', {user: @book.user} %>

			<h2>New book</h2>
			<%= render 'books/newform', {book: Book.new} %>

		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table class="table">
					<tr>
						<td>
							<%= link_to (@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= @book.user.name %>
							<% end %>
						</td>
						<td><%= link_to @book.title, @book %></td>
						<td><%= @book.body %></td>
						<!-- いいねボタン -->
						<td>
							<% if @book.favorited_by?(current_user) %>
								<%= link_to book_favorite_path(@book), method: :delete, class: "favolite-link" do %>
									<i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
									<%= @book.favorites.count %>
								<% end %>
							<% else %>
								<%= link_to book_favorite_path(@book), method: :post, class: "favolite-link" do %>
									<i class="far fa-heart" aria-hidden="true"></i>
									<%= @book.favorites.count %>
								<% end %>
							<% end %>        
						</td>
						<!-- いいねボタン/ -->
						<!-- コメント数 -->
						<td>
							<%= "コメント数：#{@book.book_comments.count}" %>
						</td>
						<!-- コメント数/ -->
						<% if @book.user.id == current_user.id %>
							<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
							<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
						<% end %>
					</tr>
				</table>

				<!-- コメント投稿フォーム -->
				<div class="book-comment-post-form">
					<%= form_for [@book, @book_comment] do |f| %>
						<% if @book_comment.errors.any? %>
							<div id="error_explanation">
								<ul>
								<% @book_comment.errors.full_messages.each do |message| %>
									<li><%= message %></li>
								<% end %>
								</ul>
							</div>
						<% end %>
						<div class="form-group">
							<%= f.text_area :comment, class: "form-control", placeholder: "コメントを入力してください" %>
							<%= f.submit "投稿", class: "btn btn-default" %>
						</div>

					<% end %>
				</div>
				<!-- コメント投稿フォーム/ -->
				<!-- 投稿コメント表示 -->
				<div class="book-comments-show-block">
					<% @book_comments.each do |book_comment| %>
						<div class="book-comment-block row">
							<div class="commenter-profile col-xs-1">
								<%= link_to book_comment.user do %>
									<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
									<%= book_comment.user.name %>
								<% end %>
							</div>
							<div class="book-comment col-xs-11">
								<div class="book-comment-text">
									<%= simple_format(h(book_comment.comment), {}, sanitize: false, wrapper_tag: "div") %>
								</div>
								<% if book_comment.user.id == current_user.id %>
									<div class="comment-edit-buttons">
										<%= link_to '削除', book_book_comment_path(@book, book_comment), method: :delete %>
									</div>
								<% end %>
							</div>
						</div>
					<% end %>
				</div>
				<!-- 投稿コメント表示/ -->
		</div>
	</div>
</div>
