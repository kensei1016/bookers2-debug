<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "name form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "email form-control" %>
    </div>
    
    <div class="field form-group">
      <%= f.label :postal_code %><br />
      <%= f.text_field :postal_code, autofocus: true, class: "postal_code form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :prefecture_code %><br />
      <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: "都道府県", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :address_city %><br />
      <%= f.text_field :address_city, autofocus: true, class: "address_city form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :address_street %><br />
      <%= f.text_field :address_street, autofocus: true, class: "address_street form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "password form-control" %>
    </div>

  <!--パスワード確認入力フォーム-->
    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>